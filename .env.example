# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Wallet Configuration (for x402 payments to other endpoints)
# This wallet pays AIXBT, TAAPI, Dreams, and other x402 endpoints
WALLET_PRIVATE_KEY=your_wallet_private_key_here

# x402 Payment Configuration (Micropayment Protocol)
# Vibe Trade receives x402 payments from clients
X402_RECIPIENT_ADDRESS=0xyour_vibe_trade_address
X402_NETWORK=base-sepolia
X402_PAYMENT_AMOUNT=100000

# x402 Endpoint URLs (NO API KEYS - x402 handles authentication)
AIXBT_ENDPOINT=https://api.aixbt.tech/x402/agents/indigo
TAAPI_ENDPOINT=https://api.taapi.io/x402
DREAMS_ROUTER_URL=https://router.daydreams.systems
HYPERLIQUID_API_URL=https://api.hyperliquid.xyz
HYPERLIQUID_TESTNET_URL=https://api.hyperliquid-testnet.xyz
HYPERLIQUID_USE_TESTNET=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Logging
LOG_FORMAT=json
