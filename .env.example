# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# x402 Payment Configuration (Micropayment Protocol)
X402_RECIPIENT_ADDRESS=0x...
X402_NETWORK=base-sepolia
X402_PAYMENT_AMOUNT=100000

# Dreams LLM Router Configuration (x402 Micropayments)
# x402 is a payment protocol - no API key needed
# Clients pay via x402 to access this endpoint
DREAMS_ROUTER_URL=https://router.daydreams.systems

# TAAPI Configuration
TAAPI_API_KEY=your_taapi_api_key
TAAPI_BASE_URL=https://api.taapi.io

# AIXBT Configuration
AIXBT_API_KEY=your_aixbt_api_key
AIXBT_BASE_URL=https://api.aixbt.tech

# Hyperliquid Configuration
HYPERLIQUID_PRIVATE_KEY=your_hyperliquid_private_key
HYPERLIQUID_API_URL=https://api.hyperliquid.xyz
HYPERLIQUID_TESTNET_URL=https://api.hyperliquid-testnet.xyz
HYPERLIQUID_USE_TESTNET=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Logging
LOG_FORMAT=json
